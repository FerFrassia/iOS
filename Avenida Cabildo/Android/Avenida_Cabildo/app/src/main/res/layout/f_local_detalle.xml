<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <ImageView android:id="@+id/iv_instagram"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_instagram"
            android:clickable="true"
            android:padding="4dp"
            />

        <ImageView android:id="@+id/iv_facebook"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_facebook"
            android:clickable="true"
            android:layout_marginLeft="8dp"
            android:padding="4dp"/>

    </LinearLayout>


    <TextView android:id="@+id/tv_descripcion"
        android:textColor="@color/colorAccentDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:textSize="18sp"
        android:text="Lorem ipsum dolor sit amet"/>


    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_weight="1"
        class="com.google.android.gms.maps.SupportMapFragment" />



    <!-- MAPA -->


    <LinearLayout android:id="@+id/ll_lugar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginBottom="1dp"
        android:background="@color/colorAccentDark"
        android:orientation="horizontal"
        android:clickable="true">


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_lugar"
            android:layout_marginRight="16dp"/>

        <TextView android:id="@+id/tv_direccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Lorem Ipsum"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/ll_horario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginBottom="1dp"
        android:background="@color/colorAccentDark"
        android:orientation="horizontal"
        android:clickable="true">


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_horario"
            android:layout_marginRight="16dp"
            android:padding="1dip"/>

        <TextView android:id="@+id/tv_horario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Lorem Ipsum"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/ll_telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginBottom="1dp"
        android:background="@color/colorAccentDark"
        android:orientation="horizontal"
        android:clickable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_telefono"
            android:layout_marginRight="16dp"
            android:padding="1dip"/>

        <TextView android:id="@+id/tv_telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Lorem Ipsum"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/ll_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginBottom="1dp"
        android:background="@color/colorAccentDark"
        android:orientation="horizontal"
        android:clickable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_email"
            android:layout_marginRight="16dp"
            android:padding="1dip"/>

        <TextView android:id="@+id/tv_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Lorem Ipsum"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/ll_web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginBottom="1dp"
        android:background="@color/colorAccentDark"
        android:orientation="horizontal"
        android:clickable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_link"
            android:layout_marginRight="16dp" />

        <TextView android:id="@+id/tv_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Lorem Ipsum"
            android:layout_gravity="center"/>

    </LinearLayout>


</LinearLayout>


</android.support.v4.widget.NestedScrollView>
